<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkullNetworkItalia.MainPage"
             Title="SNI - Home">

	<ScrollView>
		<VerticalStackLayout Spacing="20" Padding="30,40,30,30">

			<!-- Logo e Nome -->
			<VerticalStackLayout HorizontalOptions="Center"
                                 Spacing="10">
				<Image Source="logo_sni.png"
                       HeightRequest="120"
                       WidthRequest="120"
                       HorizontalOptions="Center"/>

				<Label Text="SNI"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="#FF0000"
                       HorizontalOptions="Center"/>

				<Label Text="Skull Network Italia"
                       FontSize="18"
                       TextColor="#666666"
                       HorizontalOptions="Center"/>
			</VerticalStackLayout>

			<!-- Descrizione Community -->
			<Frame BorderColor="#CCCCCC"
                   CornerRadius="10"
                   Padding="20"
                   BackgroundColor="#FAFAFA">
				<VerticalStackLayout Spacing="15">
					<Label Text="Benvenuti nella Community"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#333333"/>

					<Label Text="Skull Network Italia è la community italiana dedicata a..."
                           FontSize="16"
                           LineHeight="1.5"
                           TextColor="#444444">
						<Label.FormattedText>
							<FormattedString>
								<Span Text="Skull Network Italia " FontAttributes="Bold"/>
								<Span Text="è la community italiana dedicata agli appassionati di gaming, tecnologia e informatica. Un punto di incontro per condividere conoscenze, organizzare eventi e creare collaborazioni nel rispetto reciproco e della passione comune."/>
							</FormattedString>
						</Label.FormattedText>
					</Label>

					<!-- Aggiungi qui altri dettagli della community -->
				</VerticalStackLayout>
			</Frame>

			<!-- Ultime Notizie/Annunci -->
			<Frame BorderColor="#FF6B6B"
                   CornerRadius="10"
                   Padding="15">
				<VerticalStackLayout Spacing="10">
					<Label Text="🔥 Ultime Novità"
                           FontSize="18"
                           FontAttributes="Bold"/>
					<Label Text="• Nuovo evento in programma"
                           FontSize="14"/>
					<Label Text="• Aggiornamento app disponibile"
                           FontSize="14"/>
				</VerticalStackLayout>
			</Frame>

		</VerticalStackLayout>
	</ScrollView>

</ContentPage>